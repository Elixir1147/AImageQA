{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["../src/app/*"],
      "db/*": ["../db/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app.mts", "validateRequest.mts", "auth/auth.mts", "auth/drizzleAdapter.mts", "auth/validateRequest.mts"],
  "exclude": ["node_modules"]
}